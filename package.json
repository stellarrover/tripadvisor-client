{
  "name": "tripadvisor-client",
  "version": "0.1.0",
  "description": "A comprehensive TypeScript client library for TripAdvisor Content API. Built to address the lack of official SDK and unreliable field type documentation.",
  "keywords": [
    "tripadvisor",
    "api",
    "client",
    "typescript",
    "trip-advisor",
    "travel",
    "restaurant",
    "hotel",
    "reviews",
    "content-api",
    "sdk",
    "wrapper"
  ],
  "homepage": "https://github.com/stellarrover/tripadvisor-client#readme",
  "bugs": {
    "url": "https://github.com/stellarrover/tripadvisor-client/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stellarrover/tripadvisor-client.git"
  },
  "license": "MIT",
  "author": {
    "name": "Felix Lau",
    "email": "felixliu553@gmail.com"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "check-all": "npm run type-check && npm run lint && npm run format:check && npm run spell-check",
    "clean": "rm -rf dist",
    "dev": "tsup --watch",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "prepublishOnly": "npm run clean && npm run build && npm run test:run",
    "spell-check": "cspell \"src/**/*.{ts,tsx,js,jsx,md}\"",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cspell": "^9.2.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.3",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "4.2.0",
    "prettier-plugin-packagejson": "2.5.19",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
